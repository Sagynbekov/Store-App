<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="32dp"
    android:background="@android:color/white"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Заголовок -->
        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Добавить продукт"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Подпись для категории -->
        <TextView
            android:id="@+id/categoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Категория:" />

        <!-- Выпадающий список для категории -->
        <Spinner
            android:id="@+id/categorySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edittext" />

        <!-- Подпись для названия товара -->
        <TextView
            android:id="@+id/productNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Название товара:" />

        <!-- Поле ввода для названия товара -->
        <EditText
            android:id="@+id/productNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edittext"
            android:padding="8dp" />

        <!-- Подпись для цены покупки -->
        <TextView
            android:id="@+id/purchasePriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Цена покупки:" />

        <!-- Поле ввода для цены покупки -->
        <EditText
            android:id="@+id/purchasePriceInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edittext"
            android:padding="8dp"
            android:inputType="numberDecimal" />

        <!-- Подпись для цены продажи -->
        <TextView
            android:id="@+id/salePriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Цена продажи:" />

        <!-- Поле ввода для цены продажи -->
        <EditText
            android:id="@+id/salePriceInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edittext"
            android:padding="8dp"
            android:inputType="numberDecimal" />

        <!-- Подпись для количества -->
        <TextView
            android:id="@+id/quantityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Кол-во:" />

        <!-- Поле ввода для количества -->
        <EditText
            android:id="@+id/quantityInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edittext"
            android:padding="8dp"
            android:inputType="number" />

        <!-- Кнопка "Добавить" -->
        <Button
            android:id="@+id/addProductConfirmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Добавить"
            android:backgroundTint="#0094FF"
            android:textColor="@android:color/white" />

    </LinearLayout>

</androidx.cardview.widget.CardView>